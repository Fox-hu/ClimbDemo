<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.xingfeng.behaviordemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".TestActivity">
        </activity>
        <activity
            android:name=".AppbarLayoutScrollingActivity"
            android:label="@string/title_activity_scrolling2"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ColScrollingActivity"
            android:label="@string/title_activity_scrolling3"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".FirstBehaviorActivity">
        </activity>
        <activity android:name=".SwipeRefreshLayoutActivity">
        </activity>
        <activity android:name=".ShowHideBehaviorActivity">
        </activity>
        <activity
            android:name=".DefaultScrollingActivity"
            android:label="@string/title_activity_default_scrolling"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".CoverHeaderBehaviorActivity">
        </activity>
        <activity android:name=".HeaderBehaviorActivity">
        </activity>
        <activity android:name=".BottomSheetBehaviorActivity">
        </activity>
        <activity android:name=".BottomSheetListActivity">
        </activity>
    </application>

</manifest>